            <TextView
                android:id="@+id/pit_programmingLanguage_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="@dimen/title"
                android:text="@string/pitProgrammingLanguage"/>
            <Spinner
                android:id="@+id/pit_programming_language_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner">

            </Spinner>
<!--    //  ******************  ^^ Default Questions above. **********      -->

<!--       // ***************** Game Specific Questions **************      -->


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/pit_capstone"
                   android:textSize="@dimen/title"/>

               <RadioGroup
                   android:id="@+id/pit_capstone_radio_group"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:checkedButton="@id/pit_capstone_no">

                   <RadioButton
                       android:id="@+id/pit_capstone_yes"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/Yes"
                       android:textSize="@dimen/radioButton"/>
                   <RadioButton
                       android:id="@+id/pit_capstone_no"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/No"
                       android:textSize="@dimen/radioButton"/>

               </RadioGroup>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/title"
                   android:text="@string/pit_foundation"/>

               <RadioGroup
                   android:id="@+id/pit_foundation_radio_group"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:checkedButton="@id/pit_foundation_no">

                   <RadioButton
                       android:id="@+id/pit_foundation_yes"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/Yes"
                       android:textSize="@dimen/radioButton"/>
                   <RadioButton
                       android:id="@+id/pit_foundation_no"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/No"
                       android:textSize="@dimen/radioButton"/>

               </RadioGroup>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/title"
                   android:text="@string/pit_stone_delivery"/>

               <RadioGroup
                   android:id="@+id/pit_stone_delivery_radio_group"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:checkedButton="@id/pit_stone_delivery_no">

                   <RadioButton
                       android:id="@+id/pit_stone_delivery_yes"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/Yes"
                       android:textSize="@dimen/radioButton"/>
                   <RadioButton
                       android:id="@+id/pit_stone_delivery_no"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/No"
                       android:textSize="@dimen/radioButton"/>

               </RadioGroup>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/title"
                   android:text="@string/pit_mid_field_tape"/>

               <RadioGroup
                   android:id="@+id/pit_mid_field_tape_radio_group"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:checkedButton="@id/pit_mid_field_tape_no">

                   <RadioButton
                       android:id="@+id/pit_mid_field_tape_yes"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/Yes"
                       android:textSize="@dimen/radioButton"/>
                   <RadioButton
                       android:id="@+id/pit_mid_field_tape_no"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/No"
                       android:textSize="@dimen/radioButton"/>

               </RadioGroup>



           </LinearLayout>


<!--        // *******************************************************      -->

<!--    // ************* Default questions and buttons ***************      -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:text="@string/pitOtherLabel"/>
            <EditText
                android:id="@+id/pit_other_input"
                android:autofillHints="Other"
                android:hint="@string/pitOtherLabel"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:text="@string/scouterInitials"/>
            <EditText
                android:id="@+id/scouterInitials_input"
                android:autofillHints="Initials"
                android:hint="@string/scouterInitials"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/take_photo_btn"
                android:layout_width="match_parent"
                android:layout_height="80pt"
                android:onClick="takePhoto"
                android:textSize="12pt"
                android:text="@string/takePhotoButton" />

            <Button
                android:id="@+id/save_pit_btn"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:onClick="savePitData"
                android:textSize="12pt"
                android:text="@string/saveButton" />






        </LinearLayout>
    </ScrollView>
</LinearLayout>